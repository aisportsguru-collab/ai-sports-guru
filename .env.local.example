###
# Rename this file to `.env.local` and provide your own keys and secrets.
###

# TheOddsAPI key used to fetch sports betting odds.
NEXT_PUBLIC_THE_ODDS_API_KEY=your-the-odds-api-key-here

# Base URL for your own backend API that merges odds and model predictions.
NEXT_PUBLIC_PREDICTION_API_URL=https://api.example.com

# Supabase credentials (project URL and anonymous key).
NEXT_PUBLIC_SUPABASE_URL=https://your-supabase-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=public-anon-key

# Stripe publishable key for client-side payments.
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...

# Optional: Site URL used for redirects (defaults to localhost during development).
NEXT_PUBLIC_SITE_URL=http://localhost:3000